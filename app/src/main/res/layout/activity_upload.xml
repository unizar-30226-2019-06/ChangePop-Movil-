<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UploadActivity">
    <RelativeLayout
            android:id="@+id/relativeLayout_categoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.126">

        <TextView
                android:text="Categoría"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="116dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/textView10"/>
        <Spinner
                android:id="@+id/Spinner_categorias"
                android:layout_marginStart="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/categorias"/>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativeLayout_venta_rapida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.207">

        <Switch
                android:id="@+id/button_venta_rapida"
                android:text="Venta rápida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp" android:layout_centerVertical="true"/>
        <TextView
                android:text="Precio(€)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="116dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/textView3"/>

        <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_precio"
                android:layout_width="75dp"
                android:layout_height="29dp"
                android:padding="5dp" android:layout_alignParentStart="true" android:layout_marginStart="60dp"
                android:layout_alignParentLeft="true" android:layout_marginLeft="60dp" android:inputType="text"/>
        <Spinner
                android:id="@+id/Spinner_subasta"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:entries="@array/subastas" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_marginEnd="117dp"
                android:layout_marginRight="117dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativeLayout_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">
        <Button
                android:id="@+id/button_subir"
                android:text="@string/subir_articulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_marginEnd="123dp"
                android:layout_marginRight="123dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativeLayout_titulo_producto"
            android:layout_width="384dp"
            android:layout_height="61dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32999998">

        <TextView
                android:text="Título del producto"
                android:layout_width="132dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="116dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/textView4" android:textSize="14sp"/>

        <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_titulo_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:inputType="text"
                android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativeLayout_descrip_producto"
            android:layout_width="384dp"
            android:layout_height="123dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.574">

        <TextView
                android:text="Descripción del producto"
                android:layout_width="186dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="116dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/textView5" android:textSize="14sp"/>

        <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_descrip_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="3"
                android:padding="5dp" android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="44dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/relativeLayout_imagenes"
            android:layout_width="384dp"
            android:layout_height="61dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.784">

        <TextView
                android:text="Imágenes"
                android:layout_width="132dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="116dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/textView4" android:textSize="14sp"/>
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:tint="@android:color/background_light"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_add_black_24dp" app:backgroundTint="@color/colorPrimary"
                android:layout_alignParentTop="true" android:layout_marginTop="21dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>